<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

        <RelativeLayout
            android:background="#ffffff"
            android:id="@+id/relt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:paddingBottom="20dp"
                android:id="@+id/top_emp_pic"
                android:layout_width="120dp"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="10dp"
                android:layout_centerInParent="true"
                android:layout_height="120dp"
                app:civ_border_width="1dp"
                app:civ_border_color="#FF000000"
                android:src="@drawable/profile">

            </de.hdodenhof.circleimageview.CircleImageView>

            <TextView
                android:layout_marginTop="20dp"
                android:layout_below="@+id/top_emp_pic"
                android:textAlignment="center"
                android:id="@+id/top_emp_name"
                android:layout_width="match_parent"
                android:text="Zeeshan Waheed"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_height="wrap_content">

            </TextView>

            <TextView
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:textAlignment="center"
                android:id="@+id/title_emp"
                android:layout_below="@id/top_emp_name"
                android:layout_width="match_parent"
                android:text="Employee of the Month"
                android:layout_height="wrap_content">

            </TextView>



        </RelativeLayout>


    <androidx.recyclerview.widget.RecyclerView

        android:id="@+id/leaderboard_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </androidx.recyclerview.widget.RecyclerView>

</LinearLayout>